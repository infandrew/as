    <string name="about_title_1">One master password</string>
    <string name="about_content_1">Keep in mind only one master password (safe key) to access you accounts. Your key is also linked to your Gear device id.</string>
    <string name="about_title_2">Encryption</string>
    <string name="about_content_2">Used Advanced Encryption Standard (AES) with 256-bit key to protect your logins and passwords.</string>
    <string name="about_title_3">Clipboard auto-clearing</string>
